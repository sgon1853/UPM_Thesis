<Window x:Class="SIGRE.Client.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="SIGRE" Height="600" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top" IsMainMenu="True">
            <MenuItem Header="Funciones">
                <MenuItem Header="Dar de alta nuevo cliente" Command="{Binding CustomerCommand}"></MenuItem>
            </MenuItem>
        </Menu>
        <Grid DockPanel.Dock="Left">
            <ContentControl 
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"                 
                            Content="{Binding Content}"></ContentControl>
        </Grid>
    </DockPanel>
</Window>
