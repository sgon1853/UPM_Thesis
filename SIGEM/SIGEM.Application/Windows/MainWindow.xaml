<Window x:Class="SIGEM.Windows.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:ViewModels="clr-namespace:SIGEM.Windows.ViewModels"
        Title="SIGEM" Height="800" Width="600">
    <DockPanel>
        <Menu DockPanel.Dock="Top" IsMainMenu="True">
            <MenuItem Header="Funciones">
                <MenuItem Header="Nave nodriza" Command="{Binding SupplySpaceShipCommand}"></MenuItem>
            </MenuItem>
        </Menu>
        <Grid DockPanel.Dock="Left">
            <ContentControl Content="{Binding Path=Content}"></ContentControl>
        </Grid>
    </DockPanel>
</Window>
