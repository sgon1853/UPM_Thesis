<UserControl x:Class="SIGEM.Windows.Views.InspectionHystoric"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="300" Width="300">
    <Grid>
        <ListBox Grid.Row="1" ItemsSource="{Binding Inspection}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding isPassengerPresent}"></CheckBox>
                        <Label Content="{Binding IdPassenger}"></Label>
                        <Label Content="{Binding PassengerName}"></Label>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
